<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="e14.net.indiantourguide"
    android:versionCode="3"
    android:versionName="Dove" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/itglogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="e14.net.indiantourguide.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="e14.net.indiantourguide.InfoActivity"
            android:label="@string/title_activity_info" >
            <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name="e14.net.indiantourguide.Hotels"
            android:label="@string/title_activity_hotels" >
            <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name="e14.net.indiantourguide.TravelAgents"
            android:label="@string/title_activity_travel_agents" >
            <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name="e14.net.indiantourguide.FunZone"
            android:label="@string/title_activity_fun_zone" >
            <category android:name="android.intent.category.DEFAULT" />
        </activity>
    </application>

</manifest>
